# Connection mode. Support native stdio mode and external server mode. Uncomment to use external server mode.
# COPILOT_CLI_URL=localhost:8080

# Default model
COPILOT_MODEL=claude-opus-4.5

# Number of concurrent analyses
ANALYSIS_COUNT=2

# Agent files
AGENT_FILE=src/secret_validator_grunt/agents/secret_validator.agent.md
JUDGE_AGENT_FILE=src/secret_validator_grunt/agents/judge.agent.md
CHALLENGER_AGENT_FILE=src/secret_validator_grunt/agents/challenger.agent.md
REPORT_TEMPLATE_FILE=src/secret_validator_grunt/templates/report.md

# Polling interval in seconds
POLL_INTERVAL_SECONDS=5

# Output directory for reports
OUTPUT_DIR=analysis

# Logging level (debug/info/warning/error)
LOG_LEVEL=info

# Skill directories
# ANALYSIS_SKILL_DIRECTORIES=path/to/custom/analysis/skills
# CHALLENGER_SKILL_DIRECTORIES=path/to/custom/challenger/skills
# SKILL_DIRECTORIES=...  # Deprecated alias for ANALYSIS_SKILL_DIRECTORIES
DISABLED_SKILLS=skill2

# Max analysis timeouts (seconds)
ANALYSIS_TIMEOUT_SECONDS=1800
JUDGE_TIMEOUT_SECONDS=300
CHALLENGER_TIMEOUT_SECONDS=300

# Adversarial challenger stage (default enabled)
# CHALLENGE_ENABLED=false

# Show token usage
SHOW_USAGE=false

# GitHub token for secret scanning API calls and git clone auth
GITHUB_TOKEN=ghp_...

# Copilot CLI authentication token (optional).
# If set, used exclusively for Copilot CLI auth.
# If unset, falls back to GITHUB_TOKEN for Copilot CLI auth.
# COPILOT_TOKEN=gho_...

