# Connection mode. Support native stdio mode and external server mode. Uncomment to use external server mode.
# COPILOT_CLI_URL=localhost:8080

# Default model
COPILOT_MODEL=claude-opus-4.5

# Number of concurrent analyses
ANALYSIS_COUNT=2

# Agent files
AGENT_FILE=src/secret_validator_grunt/agents/secret_validator.agent.md
JUDGE_AGENT_FILE=src/secret_validator_grunt/agents/judge.agent.md
REPORT_TEMPLATE_FILE=src/secret_validator_grunt/templates/report.md

# Polling interval in seconds
POLL_INTERVAL_SECONDS=5

# Output directory for reports
OUTPUT_DIR=analysis

# Logging level (debug/info/warning/error)
LOG_LEVEL=info

# Skill directories (comma-separated paths)
SKILL_DIRECTORIES=src/secret_validator_grunt/skills
DISABLED_SKILLS=skill2

# Max analysis timeouts (seconds)
ANALYSIS_TIMEOUT_SECONDS=1800
JUDGE_TIMEOUT_SECONDS=300

# Show token usage
SHOW_USAGE=false

# GitHub to be used for Coplit CLI native connection mode and GitHub API calls in tools
GITHUB_TOKEN=ghp_...

